{% extends 'base.html.twig' %}

{% block body %}
    <div class="users-container">
        <h1>Liste des Avocats</h1>
        <div class="users-list">
            {% if avocats|length > 0 %}
                {% for avocat in avocats %}
                    <div class="user-card">
                        {% if avocat.photo %}
                            <img src="{{ asset('uploads/photos/' ~ avocat.photo) }}" alt="Photo de {{ avocat.user.nom }}" class="user-photo">
                        {% else %}
                            <p>Aucune photo disponible.</p>
                        {% endif %}
                        <div class="user-info">
                            <h2>Maître {{ avocat.user.nom|default('Non spécifié') }} {{ avocat.user.prenom|default('') }}</h2>
                            <p>Email : {{ avocat.user.email|default('Non spécifié') }}</p>
                            <p>Adresse : {{ avocat.adresse|default('Non spécifiée') }}</p>
                            <p>Téléphone : {{ avocat.telephone|default('Non spécifié') }}</p>

                            {# Nouveau champ pour le numéro de licence #}
                            <p>Numéro de licence : {{ avocat.licenceNumber|default('Non spécifié') }}</p>

                            {% if avocat.specialite %}
                                <p>Spécialité : {{ avocat.specialite.nom }}</p>
                            {% else %}
                                <p>Aucune spécialité définie.</p>
                            {% endif %}
                            <a href="{{ path('reservation_new', {'userId': avocat.user.id}) }}" class="btn btn-primary">Prendre rendez-vous</a>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>Aucun avocat trouvé.</p>
            {% endif %}
        </div>
    </div>
    <style>
        .users-container {
            padding: 20px;
            max-width: 1200px;
            margin: auto;
        }
        .users-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }
        .user-card {
            width: 23%;
            margin: 0.5%;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            text-align: center;
        }
        .user-photo {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }
        .user-info {
            margin-top: 10px;
        }
        @media (max-width: 768px) {
            .user-card {
                width: 48%;
                margin: 1%;
            }
        }
    </style>
{% endblock %}
