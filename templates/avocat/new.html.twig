{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ajouter un nouvel avocat</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.nom) }}
        </div>

        <div class="form-group">
            {{ form_row(form.prenom) }}
        </div>

        <div class="form-group">
            {{ form_row(form.adresse) }}
        </div>

        <div class="form-group">
            {{ form_row(form.codePostal) }}
        </div>

        <div class="form-group">
            {{ form_row(form.telephone) }}
        </div>

        {# Nouveau champ pour le num√©ro de licence seulement pour les avocats #}
        {% if is_avocat %}
            <div class="form-group">
                {{ form_row(form.licenceNumber) }}
            </div>
        {% endif %}

        <div class="form-group">
            {{ form_row(form.specialite) }}
        </div>

        <div class="form-group">
            {{ form_row(form.photo) }}
        </div>

        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}
